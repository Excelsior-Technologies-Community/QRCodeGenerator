<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QRCodeGenerator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.QRCodeGenerator" parent="Base.Theme.QRCodeGenerator" />
    <?xml version="1.0" encoding="utf-8"?>
    <resources>
        <declare-styleable name="QRCodeView">
            <!-- Title Configuration -->
            <attr name="qr_title" format="string" />
            <attr name="qr_titleTextSize" format="dimension" />
            <attr name="qr_titleTextColor" format="color" />
            <attr name="qr_showTitle" format="boolean" />

            <!-- Input Configuration -->
            <attr name="qr_inputHint" format="string" />
            <attr name="qr_inputMaxLines" format="integer" />

            <!-- Button Text Configuration -->
            <attr name="qr_selectImageButtonText" format="string" />
            <attr name="qr_generateButtonText" format="string" />
            <attr name="qr_downloadButtonText" format="string" />

            <!-- Image Configuration -->
            <attr name="qr_imageDescriptionText" format="string" />
            <attr name="qr_showImageSelection" format="boolean" />
            <attr name="qr_showDownloadButton" format="boolean" />

            <!-- QR Code Configuration -->
            <attr name="qr_codeSize" format="dimension" />
            <attr name="qr_backgroundColor" format="color" />
            <attr name="qr_foregroundColor" format="color" />

            <!-- Overlay Configuration -->
            <attr name="qr_overlaySize" format="float" />
            <attr name="qr_overlayBorderColor" format="color" />
            <attr name="qr_overlayBorderWidth" format="float" />
            <attr name="qr_overlayBackgroundColor" format="color" />
        </declare-styleable>
    </resources>
</resources>